<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="55dp" android:forceDarkAllowed="false">
    <LinearLayout android:orientation="horizontal" android:id="@+id/contentLinLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.coocent.marquee.MarqueeBorderView android:layout_gravity="center_vertical" android:id="@+id/borderView" android:background="#ffffff" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <View android:layout_gravity="center_vertical" android:background="#0d000000" android:layout_width="1dp" android:layout_height="40dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <RelativeLayout android:background="?android:attr/selectableItemBackground" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <EditText android:textSize="16sp" android:textColor="#ffffff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/nameEt" android:background="@null" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:selectAllOnFocus="true" android:inputType="text" android:imeOptions="actionDone" android:textAlignment="viewStart"/>
            <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/nameTv" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:textAlignment="viewStart"/>
        </RelativeLayout>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/pickerImg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/marquee_ic_revolving_lamp_color_pick" android:layout_marginEnd="16dp"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/deleteImg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/marquee_ic_revolving_lamp_color_delete" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/addRelLayout" android:background="?android:attr/selectableItemBackground" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/addTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/marquee_add" android:drawableLeft="@drawable/marquee_ic_revolving_lamp_color_add" android:layout_centerInParent="true" android:drawableStart="@drawable/marquee_ic_revolving_lamp_color_add"/>
    </RelativeLayout>
    <View android:background="#0d000000" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
