<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/promotion_exit_dialog_btn_bg_disable"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <ripple android:color="@color/promotion_exit_dialog_btn_bg_pressed_color">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/promotion_exit_dialog_btn_bg_color"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
