<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:id="@+id/widgetLayout" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/widget_iv_album_pic" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:contentDescription="@null"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_text" android:background="#80000000" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/line">
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/widget_tv_small_music_title" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:scrollHorizontally="true" android:singleLine="true"/>
        <TextView android:textSize="11sp" android:textColor="#66ffffff" android:gravity="center_horizontal" android:id="@+id/widget_tv" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" - " android:scrollHorizontally="true" android:singleLine="true"/>
        <TextView android:textSize="11sp" android:textColor="#66ffffff" android:gravity="center_horizontal" android:id="@+id/widget_tv_small_music_artist" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:scrollHorizontally="true" android:singleLine="true" android:layout_above="@+id/bottomLayout" android:layoutDirection="ltr"/>
    </LinearLayout>
    <TextView android:id="@+id/line" android:background="#666666" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_above="@+id/bottomLayout"/>
    <RelativeLayout android:id="@+id/bottomLayout" android:background="#80000000" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/buttons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layoutDirection="ltr">
            <ImageButton android:id="@+id/btnPrevious" android:background="@drawable/desktop_4and1_button02_backward_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_marginEnd="15dp"/>
            <ImageButton android:id="@+id/btnPlay" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/desktop_4and1_button02_play_select" android:adjustViewBounds="true"/>
            <ImageButton android:id="@+id/btnNext" android:background="@drawable/desktop_4and1_button03_forward_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:layout_marginStart="15dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
