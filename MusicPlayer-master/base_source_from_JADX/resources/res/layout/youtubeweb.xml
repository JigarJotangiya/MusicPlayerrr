<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_default_title" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back" android:background="?attr/selectableItemBackgroundBorderless" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f0803ea"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/music_online" android:layout_toRightOf="@+id/iv_back" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/iv_back"/>
    </RelativeLayout>
    <WebView android:id="@+id/web" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_default_title"/>
    <ProgressBar android:id="@+id/progressbar" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:indeterminateTint="@color/colorAccent"/>
</RelativeLayout>
