<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/root_image" android:background="@color/splash_1_bg_color" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/theme_bg01" android:scaleType="centerCrop"/>
    <RelativeLayout android:id="@+id/rl_title_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <coocent.music.player.widget.DeepDefaultTitle android:id="@+id/defualt_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tv_skip" android:background="@drawable/skip_skin_shape" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="@string/skip" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_skin_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Violet blue" android:layout_below="@+id/rl_title_layout" android:layout_centerHorizontal="true" android:layout_alignWithParentIfMissing="true"/>
    <coocent.music.player.widget.AutoViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_above="@+id/rl_bottom" android:layout_below="@+id/tv_skin_name"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_bottom" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/rl_progress">
        <RelativeLayout android:gravity="center" android:id="@+id/rl_splash_1_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_1_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_1_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_splash_2_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_2_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_2_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_splash_3_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_3_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_3_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_splash_4_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_4_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_4_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_splash_5_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_5_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_5_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_splash_6_select" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/tv_splash_6_select" android:background="@drawable/splash_skin_1_shape_select" android:visibility="invisible" android:layout_width="45dp" android:layout_height="45dp" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/tv_splash_6_bg" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/rl_progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_above="@+id/navigation_view" android:layout_centerHorizontal="true" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
        <TextView android:textSize="22sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_open1" android:background="@drawable/splash_skin_1_open_shape" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/open_now" android:layout_centerInParent="true" android:paddingStart="20dp" android:paddingEnd="20dp"/>
    </RelativeLayout>
    <View android:id="@+id/navigation_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
