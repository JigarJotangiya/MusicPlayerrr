<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/app_90_black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/effect_title" android:background="#80000000" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/menu_page_effect" android:layout_marginStart="5dp"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/effect_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/effect_title">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/recyclerview"/>
    </RelativeLayout>
</RelativeLayout>
