<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:paddingStart="30dp" android:paddingEnd="30dp">
        <ImageView android:id="@+id/iv_exit" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_exit"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView android:textSize="30sp" android:textColor="@color/white" android:ellipsize="marquee" android:id="@+id/tv_music" android:focusable="false" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Music" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" android:paddingStart="20dp" android:paddingEnd="20dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/transWhite" android:ellipsize="marquee" android:id="@+id/tv_artist" android:focusable="false" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Artist" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" android:paddingStart="20dp" android:paddingEnd="20dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="80dp">
            <ImageView android:id="@+id/iv_prev" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_previous"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
                <com.coocent.library.RoundProgressView android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/iv_play" android:layout_alignBottom="@+id/iv_play" android:layout_alignStart="@+id/iv_play" android:layout_alignEnd="@+id/iv_play" app:RoundProgressRadius="3dp"/>
                <ImageView android:id="@+id/iv_play" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_play"/>
            </RelativeLayout>
            <ImageView android:id="@+id/iv_next" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_next"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp">
        <ImageView android:id="@+id/iv_play_mode" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_sequence" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_favorite" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_love" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_play_list" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_playlist" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="30dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/drivemode_ic_car"/>
        <TextView android:textSize="15sp" android:textColor="@color/transWhite" android:id="@+id/car_mode_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Car mode" android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>
