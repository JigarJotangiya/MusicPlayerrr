<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:textDirection="locale">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_detail_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/details"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_title" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_album" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_album" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_album" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_artist" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_artists" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_artist" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_time" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_times" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_size" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_size" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_size" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/first_tv_path" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit_path" android:layout_weight="3"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_path" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:layout_weight="8" android:layout_marginStart="20dp"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorAccent" android:id="@+id/cancel" android:background="?attr/selectableItemBackground" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@android:string/cancel" android:layout_toLeftOf="@+id/edit" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/edit"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorAccent" android:id="@+id/edit" android:background="?attr/selectableItemBackground" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/edit" android:layout_alignParentRight="true" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
