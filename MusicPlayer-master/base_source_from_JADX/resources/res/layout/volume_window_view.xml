<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/top_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" app:cardBackgroundColor="@color/transparent" app:cardCornerRadius="10dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/window_layout" android:background="@color/black" android:padding="10dp" android:layout_width="match_parent" android:layout_height="130dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_volume" android:padding="10dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/home_more_volume"/>
                <RelativeLayout android:id="@+id/volume_title_layout" android:layout_width="match_parent" android:layout_height="25dp" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_toEndOf="@+id/iv_volume">
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_volume" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/effect_volume" android:singleLine="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_volume_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="25dp" android:layout_below="@+id/volume_title_layout" android:layout_toEndOf="@+id/iv_volume">
                    <SeekBar android:gravity="center" android:id="@+id/volume_seek_bar" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="3dp" android:max="100" android:progress="30" android:progressDrawable="@drawable/boost_volume_seekbar" android:minHeight="3dp" android:thumb="@drawable/effect_thumb" android:splitTrack="false"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/boost_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <ImageView android:id="@+id/iv_boost" android:padding="10dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/home_more_boost"/>
                <RelativeLayout android:id="@+id/boost_title_layout" android:layout_width="match_parent" android:layout_height="25dp" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_toEndOf="@+id/iv_boost">
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_boost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/effect_boost" android:singleLine="true" android:layout_centerVertical="true"/>
                    <CheckBox android:id="@+id/cb_boost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_toEndOf="@+id/tv_boost"/>
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_boost_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0%" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="25dp" android:layout_below="@+id/boost_title_layout" android:layout_toEndOf="@+id/iv_boost">
                    <SeekBar android:gravity="center" android:id="@+id/boost_seek_bar" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="3dp" android:max="100" android:progress="30" android:progressDrawable="@drawable/boost_volume_seekbar" android:minHeight="3dp" android:thumb="@drawable/effect_thumb" android:splitTrack="false"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View android:id="@+id/bottom_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="4"/>
</LinearLayout>
