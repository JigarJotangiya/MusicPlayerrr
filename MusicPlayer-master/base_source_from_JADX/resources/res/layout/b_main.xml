<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:id="@+id/open" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="press here to open a file &amp; play it..." android:onClick="OpenClicked"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:gravity="center" android:id="@+id/txtTempo" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tempo = 0%"/>
        <SeekBar android:id="@+id/sbTempo" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="60" android:progress="30"/>
        <TextView android:gravity="center" android:id="@+id/txtSamplerate" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Samplerate = 44100Hz"/>
        <SeekBar android:id="@+id/sbSamplerate" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="26460" android:progress="13230"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/txtBPM" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BPM: 0.00" android:layout_weight="0.75"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/txtBeatPos" android:paddingTop="10dp" android:layout_width="143dp" android:layout_height="wrap_content" android:text="Beat pos: 0.00"/>
        </LinearLayout>
        <CheckBox android:id="@+id/chkBeatPos" android:layout_width="match_parent" android:layout_height="wrap_content" android:checked="false" android:text="Enable / Disable showing Beat pos" android:onClick="ChkBeatPosClicked"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/chkBPM" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BPM by period of seconds:" android:onClick="ChkBPMClicked"/>
            <EditText android:gravity="center" android:id="@+id/etxtBPM" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="10" android:ems="10" android:inputType="number"/>
        </LinearLayout>
        <TextView android:gravity="center" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Detection progress of a decoding BPM:"/>
        <ProgressBar android:id="@+id/pbProgressBPM" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="0" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:gravity="center" android:id="@+id/txtPos" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Playing position: 00:00 / 00:00"/>
        <SeekBar android:id="@+id/sbPosition" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
