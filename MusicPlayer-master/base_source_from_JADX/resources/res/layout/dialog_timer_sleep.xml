<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_title" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_timer_sleep" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sleep_timer" android:textAlignment="viewStart"/>
        <TextView android:textSize="14sp" android:textColor="@color/gray_light" android:id="@+id/tv_timer_sleep_time_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="00:00" android:layout_below="@+id/tv_timer_sleep" android:textAlignment="viewStart"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_radio" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/rl_title">
        <RadioGroup android:orientation="vertical" android:id="@+id/radioGroup" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_1" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_1" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/none" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_2" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_2" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/time_15" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_3" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_3" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/time_30" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_4" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_4" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/time_45" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_5" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_5" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/time_60" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_6" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_6" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/time_75" android:textAlignment="viewStart" android:paddingStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_7" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rb_7" android:background="@null" android:padding="10dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/custom" android:textAlignment="viewStart" android:paddingStart="10dp"/>
                    <TextView android:id="@+id/tv_custom_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="20dp" android:layout_toEndOf="@+id/rb_7"/>
                </RelativeLayout>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    <CheckBox android:id="@+id/cb_over_to_stop" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:checked="true" android:text="@string/timer_over_to_stop" android:layout_below="@+id/ll_radio" android:paddingStart="10dp"/>
    <RelativeLayout android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/cb_over_to_stop">
        <TextView android:textColor="@color/colorAccent" android:id="@+id/dialog_ok" android:background="?attr/selectableItemBackground" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/ok" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
        <TextView android:textColor="@color/colorAccent" android:id="@+id/dialog_cancel" android:background="?attr/selectableItemBackground" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/cancel" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="20dp" android:layout_toStartOf="@+id/dialog_ok"/>
    </RelativeLayout>
</RelativeLayout>
