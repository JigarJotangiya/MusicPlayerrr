    <ImageView android:id="@+id/lyricBtn" android:background="?android:attr/selectableItemBackground" android:clickable="true" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/notification_button01_on" android:scaleType="center" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_toStartOf="@+id/playBtn"/>
