<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:layoutDirection="ltr">
    <ImageView android:id="@+id/iv_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <View android:id="@+id/color_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/bottom_control" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <coocent.music.player.widget.DeepCropTitle android:id="@+id/deepTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="locale"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/track_name" android:background="@color/crop_bg_color" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/rate_for_us"/>
            <RelativeLayout android:background="@color/crop_bg_color" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <View android:background="@color/default_time_bg_color" android:layout_width="match_parent" android:layout_height="15dp"/>
                <coocent.music.player.widget.ringtone.WaveformView android:id="@+id/waveform" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="15dp"/>
                <coocent.music.player.widget.ringtone.MarkerView android:id="@+id/startmarker" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <coocent.music.player.widget.ringtone.MarkerView android:id="@+id/endmarker" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/info" android:background="@color/crop_bg_color_half" android:padding="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/font_m_small"/>
            <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/default_text_color" android:gravity="center" android:id="@+id/set_start" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="4dp" android:text="@string/set_start" android:layout_weight="2" android:onClick="setStart" android:textAllCaps="false"/>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="4dp" android:layout_weight="1">
                    <TextView android:textSize="15sp" android:textColor="@color/default_text_color" android:layout_gravity="center_horizontal" android:id="@+id/song_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="10sp" android:textColor="@color/default_text_color" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Length" android:textAllCaps="false"/>
                </LinearLayout>
                <TextView android:textColor="@color/default_text_color" android:gravity="center" android:id="@+id/set_end" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="4dp" android:text="@string/set_end" android:layout_weight="2" android:onClick="setEnd"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="8dp">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
                    <TextView android:textColor="@color/default_text_color" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/start"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="secStart"/>
                        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="@drawable/bg_edit" android:padding="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                            <EditText android:textSize="14sp" android:textColor="@color/default_text_color" android:id="@+id/start_tv" android:background="@drawable/bg_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="locale"/>
                            <LinearLayout android:orientation="vertical" android:background="@color/default_text_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="3dp"/>
                        </LinearLayout>
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="addStart"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
                    <TextView android:textColor="@color/default_text_color" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/end"/>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="secEnd"/>
                        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:background="@drawable/bg_edit" android:padding="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                            <EditText android:textSize="14sp" android:textColor="@color/default_text_color" android:id="@+id/end_tv" android:background="@drawable/bg_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="locale"/>
                            <LinearLayout android:orientation="vertical" android:background="@color/default_text_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="3dp"/>
                        </LinearLayout>
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="addEnd"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/adview" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/crop_foot_height">
                <ImageButton android:id="@+id/cropZoomOut" android:background="?attr/selectableItemBackgroundBorderless" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:scaleType="center" android:layout_centerInParent="true" android:contentDescription="@null" android:layout_marginEnd="20dp" android:layout_toStartOf="@+id/cropPrevious"/>
                <ImageButton android:id="@+id/cropPrevious" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="45dp" android:layout_height="45dp" android:scaleType="center" android:layout_centerInParent="true" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="70dp" android:layout_toStartOf="@+id/cropPlay"/>
                <ImageButton android:id="@+id/cropPlay" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_centerInParent="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
                <ImageButton android:id="@+id/cropNext" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="45dp" android:layout_height="45dp" android:scaleType="center" android:layout_centerInParent="true" android:layout_centerVertical="true" android:layout_marginStart="70dp" android:layout_toEndOf="@+id/cropPlay"/>
                <ImageButton android:id="@+id/cropZoomIn" android:background="?attr/selectableItemBackgroundBorderless" android:visibility="gone" android:layout_width="45dp" android:layout_height="45dp" android:scaleType="center" android:layout_centerInParent="true" android:layout_marginStart="20dp" android:layout_toEndOf="@+id/cropNext"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
