<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:padding="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_title" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/tv_coins" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_coins"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/layout_title">
        <TextView android:textSize="13sp" android:textColor="#5c5c5c" android:id="@+id/tv_description_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/remove_ads_tip1"/>
        <TextView android:textSize="13sp" android:textColor="#5c5c5c" android:id="@+id/tv_description_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/remove_ads_tip2"/>
        <TextView android:textSize="13sp" android:textColor="#5c5c5c" android:id="@+id/line3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/remove_ads_tip3"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/layout_description">
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_remove_ads" android:background="@drawable/remove_ads_button01_off" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:layout_weight="1" android:contentDescription="@string/coocent_remove_all_ads" android:layout_marginEnd="10dp">
            <ImageView android:id="@+id/iv_remove_ads" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/remove_ads_icon01" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_remove_ads" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/coocent_remove_all_ads" android:layout_toRightOf="@+id/iv_remove_ads" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/iv_remove_ads"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_watch_video" android:background="@drawable/remove_adsbutton02_selector" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/get_coins">
            <ImageView android:id="@+id/iv_watch_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/remove_ads_icon02" android:layout_toLeftOf="@+id/tv_watch_video" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/tv_watch_video"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_watch_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/get_coins" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/remove_ads_button03" android:layout_alignParentRight="true" android:contentDescription="@android:string/cancel" android:layout_alignParentEnd="true"/>
</RelativeLayout>
