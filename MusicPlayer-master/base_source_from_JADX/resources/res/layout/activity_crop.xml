<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/default_time_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="@dimen/abc_action_bar_default_height_material">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/iv_back" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/crop_back" android:layout_marginStart="10dp"/>
        <TextView android:textSize="20sp" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:text="@string/music_crop" android:singleLine="true"/>
    </FrameLayout>
    <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/info" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <FrameLayout android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/crop_default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/coocent_start"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_start_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/crop_default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/coocent_duration"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_selected_length" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:layout_gravity="end" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/crop_default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/coocent_end"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_end_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout android:background="@color/crop_bg_color" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <View android:background="@color/default_time_bg_color" android:layout_width="match_parent" android:layout_height="15dp"/>
        <com.coocent.musiccutter.ringtone.WaveformView android:id="@+id/waveform" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layoutDirection="ltr">
        <com.coocent.musiccutter.ringtone.MarkerView android:id="@+id/startmarker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_cut_contents_button01"/>
        <com.coocent.musiccutter.ringtone.MarkerView android:id="@+id/endmarker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_cut_contents_button02"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:padding="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:background="@drawable/bg_btn_reset" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="2" android:onClick="setStart">
            <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/set_start" android:singleLine="true" android:drawablePadding="10dp" android:drawableStart="@drawable/ic_cut_start_on"/>
        </LinearLayout>
        <View android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:background="@drawable/bg_btn_reset" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="2" android:onClick="setEnd">
            <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/set_end" android:singleLine="true" android:drawablePadding="10dp" android:drawableEnd="@drawable/ic_cut_end"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:padding="5dp" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_cut_contents_button04" android:onClick="secStart"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_set_start" android:background="@drawable/bg_btn_set_time" android:padding="5dp" android:layout_width="70dp" android:layout_height="30dp" android:text="00:00.0" android:singleLine="true"/>
            <ImageView android:padding="5dp" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_cut_contents_button05" android:onClick="addStart"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:padding="5dp" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_cut_contents_button04" android:onClick="secEnd"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_set_end" android:background="@drawable/bg_btn_set_time" android:padding="5dp" android:layout_width="70dp" android:layout_height="30dp" android:text="00:00.0" android:singleLine="true"/>
            <ImageView android:padding="5dp" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_cut_contents_button05" android:onClick="addEnd"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_play" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_cut_play"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:padding="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:id="@+id/ll_reset" android:background="@drawable/bg_btn_reset" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_cut_reset"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/reset" android:singleLine="true" android:layout_marginStart="5dp"/>
        </LinearLayout>
        <View android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:layout_gravity="end" android:id="@+id/ll_save" android:background="@drawable/bg_btn_save" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="40dp" android:minWidth="100dp" android:layout_weight="1">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_cut_save"/>
            <TextView android:textSize="14sp" android:textColor="@color/crop_light_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/eq_save" android:singleLine="true" android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/ad_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="0dp"/>
</LinearLayout>
