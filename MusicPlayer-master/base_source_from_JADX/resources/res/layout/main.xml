<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:id="@+id/open" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="press here to open a file &amp; play it..." android:onClick="OpenClicked"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Volume" android:layout_weight="1.16"/>
            <TextView android:gravity="center" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DX8 Reverb" android:layout_weight="0.78"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <SeekBar android:id="@+id/sbVolume" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="100" android:progress="50" android:layout_weight="0.32" android:paddingEnd="10dp"/>
            <SeekBar android:id="@+id/reverb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="20" android:progress="0" android:layout_weight="0.31"/>
        </LinearLayout>
        <TextView android:gravity="center" android:id="@+id/txtTempo" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tempo = 0%"/>
        <SeekBar android:id="@+id/sbTempo" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="60" android:progress="30"/>
        <TextView android:gravity="center" android:id="@+id/txtPos" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Playing position: 00:00 / 00:00"/>
        <SeekBar android:id="@+id/sbPosition" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnDirection" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Playing Direction - Reverse" android:onClick="DirectionClicked"/>
    </LinearLayout>
</ScrollView>
